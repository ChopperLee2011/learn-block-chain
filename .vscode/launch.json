{
      "version": "0.2.0",
      "configurations": [
        {
          "type": "node",
          "request": "launch",
          "name": "Hardhat Test Debug",
          "runtimeExecutable": "npx",
          "runtimeArgs": [
            "hardhat",
            "test",
            "--no-compile",  // 避免重复编译，加快调试
            "${file}"        // 调试当前打开的测试文件
          ],
          "skipFiles": [
            "<node_internals>/**"  // 跳过 Node 内部文件
          ],
          "console": "integratedTerminal",
          "internalConsoleOptions": "neverOpen"
        }
      ]
}